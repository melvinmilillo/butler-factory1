---
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts'; // ИСПРАВЛЕНИЕ: Используем абсолютный путь '@/'

interface Props {
	title?: string;
	description?: string;
    heroImage?: string;
    schema?: object;
}

const { title = SITE_TITLE, description = SITE_DESCRIPTION, heroImage = '/placeholder-social.jpg', schema } = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="ru">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" href="/favicon.ico" type="image/x-icon" />
		<meta name="generator" content={Astro.generator} />
        
        {/* --- SEO-БЛОК --- */}
		<title>{title}</title>
		<meta name="description" content={description} />
        <link rel="canonical" href={canonicalURL} />

        {/* --- Open Graph / Facebook --- */}
        <meta property="og:type" content="website" />
        <meta property="og:url" content={Astro.url} />
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta property="og:image" content={new URL(heroImage, Astro.url)} />
        <meta property="og:site_name" content={SITE_TITLE} />

        {/* --- Twitter Card --- */}
        <meta property="twitter:card" content="summary_large_image" />
        <meta property="twitter:url" content={Astro.url} />
        <meta property="twitter:title" content={title} />
        <meta property="twitter:description" content={description} />
        <meta property="twitter:image" content={new URL(heroImage, Astro.url)} />

        {/* --- Верификация для поисковых систем --- */}
        <meta name="google-site-verification" content="QmTdEF5xHLHXsL1FEcotg-xZTPfD14z9BxH6D64b0ds" />
        <meta name="yandex-verification" content="92b03968d7c06925" />

        {/* --- Микроразметка Schema.org --- */}
        {schema && <script type="application/ld+json" set:html={JSON.stringify(schema)} />}

        <!-- Yandex.Metrika counter -->
        <script type="text/javascript" >
           (function(m,e,t,r,i,k,a){m[i]=m[i]||function(){(m[i].a=m[i].a||[]).push(arguments)};
           m[i].l=1*new Date();
           for (var j = 0; j < document.scripts.length; j++) {if (document.scripts[j].src === r) { return; }}
           k=e.createElement(t),a=e.getElementsByTagName(t)[0],k.async=1,k.src=r,a.parentNode.insertBefore(k,a)})
           (window, document, "script", "https://mc.yandex.ru/metrika/tag.js", "ym");
        
           ym(103370647, "init", {
                clickmap:true,
                trackLinks:true,
                accurateTrackBounce:true,
                webvisor:true
           });
        </script>
	</head>
	<body>
        <noscript><div><img src="https://mc.yandex.ru/watch/103370647" style="position:absolute; left:-9999px;" alt="" /></div></noscript>

		<header style="padding: 1rem; border-bottom: 1px solid #ccc; margin-bottom: 2rem; display: flex; justify-content: space-between; align-items: center;">
			<a href="/" style="text-decoration: none; font-weight: bold; font-size: 1.2rem;">Наш Блог-сателлит</a>
            <nav>
                <a href="/blog" style="margin-left: 1rem;">Блог</a>
                <a href="/kontakty" style="margin-left: 1rem;">Контакты</a>
            </nav>
		</header>
		<main style="padding: 0 1rem;">
			<slot />
		</main>
		<footer style="padding: 1rem; border-top: 1px solid #ccc; margin-top: 2rem; text-align: center;">
			<p>Вся информация носит ознакомительный характер.</p>
		</footer>
	</body>
</html>
